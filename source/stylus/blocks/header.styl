.header
  position absolute
  left 0
  width 100%
  top 0
  z-index 15

  &.fixed
    position fixed

  .width-wrap
    background $cWhite
    box-shadow  0 0 10px rgba(0,0,0,0.3)

    @media tb
      width 100%
      padding 0

  &--top
    display block
    padding 12px 55px 11px 30px
    background $cGray
    position relative
    z-index 20

    @media nb
      padding 12px 10px 11px 10px

    @media mb
      display none

  .flex-between
    @media tb
      align-items center

  &--top-mobile
    display none
    position relative
    z-index 20
    background $cWhite

    @media mb
      display block
      padding 12px 10px 11px 10px

  &--nav
    li
      display inline-block
      vertical-align top
      margin-right 38px

      @media nb
        margin-right 20px

      @media tb
        margin-right 10px

      a
        display block
        color $cGray_l
        font-weight lighter
        font-size 13px
        transition all 0.2s ease-in-out

        &:hover
          color $cWhite

  &--lk
    position relative
    color $cWhite
    font-size 18px
    line-height 17px
    font-family $fTtlimesslab

    @media tb
      font-size 0
      width 25px
      height 25px

    @media mb
      width 40px
      height 40px

    &:before
      position absolute
      content ""
      left -40px
      top -5px
      width 25px
      height 25px
      background url(../img/spritesheet.png) no-repeat -21px -459px

      @media tb
        left 0

      @media mb
        top 0
        width 40px
        height 40px
        border-radius 40px
        background #d5edfc url(../img/spritesheet.png) no-repeat -14px -451px

    &:hover
      text-decoration underline

  &--middle
    padding 25px 28px 12px 24px
    position relative
    z-index 20
    background $cWhite

    @media tb
      padding 25px 10px 12px 10px

    @media mb
      background $cBlue_d

    .header--lk
      display none

      @media mb
        display inline-block
        vertical-align top

    .header--phone,
    .header--logo
      @media mb
        display none


  &--logo
    display inline-block
    vertical-align top
    width 129px
    margin-top -5px

    @media nb
      width 100px

    @media xs
      width 80px

    img
      display block
      width 129px
      height 72px

      @media nb
        width 100%
        height auto

  &--phone
    display inline-block
    vertical-align top
    font-size 24px
    color $cBlack
    font-family $fUbuntu_m
    margin-top 19px

    @media nb
      font-size 19px

    @media tb
      font-size 18px
      margin-top 6px

    @media mb
      font-size 24px

    @media xs
      font-size 18px
      margin-top -4px

  &--searh
    display inline-block
    vertical-align top
    border 1px solid $cBlue_m
    border-radius 50px
    width 530px
    height 60px
    position relative
    background $cWhite

    @media nb
      width 330px
      height 50px

    @media mb
      width 76%

    @media xs
      width 70%

    &.open
      label.change-category:after
        transform rotate(180deg)

    label
      display inline-block
      vertical-align top
      width 240px
      height 60px
      position relative

      @media nb
        height 50px
        width 135px

      @media tb
        width 150px

      @media mb
        width 49.5%

    label.change-category
      border-right 1px solid $cBlue_m
      width 220px
      border-radius 30px 0 0 30px
      margin-left 1px
      cursor pointer

      @media nb
        width 180px

      @media tb
        width 165px

      @media mb
        width 48%

      &:after
        position absolute
        content ""
        top 50%
        margin-top -4px
        right 25px
        background url("../img/spritesheet.png") no-repeat -21px -319px
        border none
        width 12px
        height 7px
        transition all 0.3s ease-in-out
        transform rotate(0deg)

        @media nb
          right 15px

        @media mb
          right 5px

      .inp
        padding 0 15px
        pointer-events none

    .inp
      display inline-block
      vertical-align top
      height 60px
      position relative
      padding 0 45px 0 30px
      color $cGray
      width 100%
      border none

      @media nb
        height 50px
        padding 0 40px 0 15px

    .inp-submit
      position absolute
      font-size 0
      width 20px
      height 20px
      top 50%
      margin-top -10px
      right 30px
      background url("../img/spritesheet.png") no-repeat -103px -597px
      border none
      outline none
      box-shadow 0
      cursor pointer

      @media nb
        right 15px

    .dropdown
      top 38px
      left -2px
      width 223px
      border 1px solid $cBlue_m
      border-top 1px solid transparent
      padding-top 10px
      border-radius 0 0 30px 30px

      @media nb
        top 35px
        left -1px
        width 182px

      @media tb
        width 167px

      @media mb
        width auto
        right -1px

      &:before
        position absolute
        content ""
        left -1px
        top -10px
        width 10px
        height 10px
        background $cWhite
        border-left 1px solid $cBlue_m

      &:after
        position absolute
        content ""
        right -1px
        top -10px
        width 10px
        height 10px
        background $cWhite
        border-right 1px solid $cBlue_m
        display none

        @media mb
          display block

      ul
        display block
        border-radius 0 0 30px 30px
        padding-bottom 15px
        transition all 0.2s ease-in-out

        li
          display block
          padding 5px 0 5px 30px
          background transparent
          color $cGray !important
          font-size 14px

          @media nb
            padding 5px 0 5px 15px

          &:hover
            text-decoration underline

  &--basket
    display inline-block
    vertical-align top
    height 60px
    box-shadow 0 2px 8px rgba(0, 0, 0, 0.3)
    border-radius 30px
    margin-top 1px
    position relative
    padding 0 26px 0 19px

    @media nb
      height 50px
      padding 0 11px 0 11px

    @media tb
      padding 0
      border none
      box-shadow none

    &.open
      .header--basket-current
        i
          transform rotate(-180deg)

    &-empty
      text-align center

      span
        display block
        text-align center
        color $cBlue_d
        line-height 60px

        @media nb
          line-height 50px

    &-full
      height 60px

      @media nb
        height 50px

    &-icon
      display inline-block
      vertical-align top
      width 28px
      height 28px
      background url(../img/spritesheet.png) no-repeat -88px -459px
      margin-right 10px
      position relative
      z-index 15

    &-current
      margin-right 18px
      position relative
      z-index 15
      white-space nowrap

      @media tb
        display none

      span
        color $cBlue_d
        margin-right 9px

        i
          display inline
          width auto
          height auto
          margin 0
          background none
          font-style normal

      i
        display inline-block
        vertical-align top
        background url("../img/spritesheet.png") no-repeat -21px -319px
        border none
        width 12px
        height 7px
        transition all 0.3s ease-in-out
        transform rotate(0deg)
        cursor pointer
        margin-top 6px

    &-summ
      display inline-block
      vertical-align top
      font-weight bold
      color $cBlack
      position relative
      z-index 15
      white-space nowrap

      @media mb
        display none

    .dropdown
      top 45px
      left -20px
      right -20px
      text-align center
      background transparent !important
      padding 0 !important
      padding-top 23px !important

      &:before,
      &:after
        display none

      @media nb
        top 29px
        padding 20px

      .bg-wrap
        background url(../img/bg--menu.png) no-repeat 0 0
        background-size 100% 100%
        padding 40px 10px 15px 15px

      ul
        margin-bottom 10px

        li
          padding-left 50px
          padding-right 40px
          white-space nowrap

          .header--basket-list--img
            display inline-block
            vertical-align top
            margin-left -50px
            margin-right 10px
            width 45px
            border-radius 10px 5px 10px 5px
            border 2px solid $cGray_l
            padding 5px

            img
              display block
              max-width 100%

          .header--basket-list--remove
            display inline-block
            vertical-align top
            margin-right -40px
            margin-left 10px
            width 38px
            height 39px
            background url("../img/icon--close.png") no-repeat 0 0

          .header--basket-list--content
            display inline-block
            vertical-align top
            width 90%
            white-space normal

            span
              display block

      .flex-between
        span
          font-weight bold

      .btn
        background url("../img/bg--btn-s.png") no-repeat 0 0
        width 127px
        height 65px
        color $cWhite
        line-height 43px
        font-size 22px
        font-family $fTtlimesslab

    &-list
      text-align left

      li
        display block
        text-align left
        padding 5px 0
        background transparent
        color $cGray !important
        font-size 14px

    .btn
      background $cBlue_l
      text-align center
      display block
      border-radius 30px
      padding 10px 15px
      margin 15px auto 0
      color $cBlack
      height auto
      transition all 0.3s ease-in-out
      font-family $fUbuntu
      font-size 14px
      line-height 18px
      width auto

      &:hover
        color $cBlue_d

  &--bottom
    display block
    padding 0 33px 16px 14px
    background $cWhite

    @media tb
      position fixed
      left 0
      right 0
      bottom 0
      top 0
      background #0076c0
      padding 30px
      overflow auto
      padding-top 210px
      z-index 15
      transform translateX(-100%)
      transition all 0.2s ease-in-out

    @media xs
      padding-left 10px
      padding-right 10px

    &.is_open
      transform translateX(0)

    ul
      @media tb
        display block !important
        text-align left

      li
        display inline-block
        vertical-align top
        position relative

        &:last-child
          .dropdown
            left auto
            right 0

        &.dropdown-wrap.open > a
          background $cBlue_l
          color $cBlue_d

          @media tb
            background transparent
            color $cWhite

        &.open
          .dropdown
            display block !important
            opacity 1
            
          a.mobile-icon
            @media tb
              background url("../img/bg--decor-btn-right.png") no-repeat 0 0 !important

            &:after
              @media tb
                content "-" !important

        @media tb
          display block
          margin-bottom 10px
          text-align left
          padding-left 75px
          position relative

        @media mb
          padding-left 50px

        a
          display block
          transition all 0.2s ease-in-out
          border-radius 30px
          color $cBlack
          text-align center
          padding 10px 12px 12px
          font-size 13px
          white-space nowrap

          @media nb
            font-size 11px
            padding 5px 9px 6px

          @media tb
            font-size 30px
            color $cWhite
            text-align left
            display inline-block
            vertical-align top

          @media mb
            font-size 20px

          @media xs
            font-size 14px

          &:hover
            background $cBlue_l
            color $cBlue_d

            @media tb
              background transparent
              color $cWhite

          &.bio
            @media tb
              background $cBlue_l
              color $cBlue_d


        a.mobile-icon
          display none

          @media tb
            display inline-block
            vertical-align top
            position absolute
            left 0
            top 0
            width 38px
            height 39px
            background url("../img/bg--decor-btn-right-white.png") no-repeat 0 0
            padding 0
            text-align center

          &:after
            content "+"
            color $cGray
            line-height 36px

      .dropdown
        top 36px
        padding 11px 20px 20px
        border-radius 0 0 30px 30px
        text-align left
        max-width 300px
        min-width 200px

        @media tb
          position relative
          top auto
          padding 0
          padding-left 50px
          background transparent
          max-width 100%
          overflow hidden
          display none !important

        @media xs
          padding-left 20px

        li
          display block
          padding 5px 0
          text-align left

          &:last-child
            margin-bottom 0

          a
            display block
            text-align left
            padding 0
            color $cBlack
            background transparent
            white-space normal

            @media tb
              color $cWhite

            &:hover
              text-decoration underline

  &--mobile-menu
    display none
    position relative
    z-index 10

    &.is_open
      background url("../img/spritesheet.png")  no-repeat -622px -22px

    @media tb
      display inline-block
      vertical-align top
      width 30px
      height 26px
      background url("../img/spritesheet.png")  no-repeat -165px -597px

  &--current-mobile
    display none

    @media tb
      display block
      padding 0 2px
      border-radius 15px
      background-color #fff
      border 1px solid #7bbfeb
      position absolute
      left 17px
      top -3px
      color #000
      font-size 14px
      text-align center
      line-height 21px
      z-index 100
