.blog
  .flex-between
    @media mb
      display block !important

  &--list
    display inline-block
    vertical-align top
    width 850px
    padding-top 20px

    @media nb
      width 600px

    @media tb
      display block
      width auto

    @media mb
      width auto

    li
      display block
      margin-bottom 80px

      @media tb
        margin-bottom 40px

      @media mb
        margin-bottom 40px

      .img
        display inline-block
        vertical-align top
        width 235px
        margin-right 30px

        @media nb
          width 135px
          margin-bottom 30px

        @media tb
          display block
          max-width 40%
          margin 0 auto 30px

        img
          display block
          max-width 100%
          border-radius 40px

      .content
        display inline-block
        vertical-align top
        width 570px

        @media nb
          width auto

        @media tb
          width auto

        @media mb
          width 98%

        time
          display block
          margin-bottom 5px
          color $cBlue_d
          font-weight bold

        .title
          display block
          color $cGray
          font-size 24px
          font-family $fUbuntu_m
          margin-bottom 33px

          &:hover
            text-decoration underline

        p
          display block
          line-height 17px
          margin-bottom 20px

        .data
          display block
          text-align right
          margin-right 59px
          margin-top 45px

          @media tb
            margin-right 0

          div
            display inline-block
            vertical-align top
            margin-left 31px

            @media mb
              margin-left 10px

            img
              display inline-block
              vertical-align top
              margin-right 8px
              width 23px
              height 21px

            span
              display inline-block
              vertical-align top
              color $cGray
              font-weight bold
              line-height 25px

  aside
    width 315px
    background url("../img/bg--blog-aside.png") no-repeat 0 0
    background-size 100% 100%
    padding 45px
    padding-right 30px
    margin-top 10px
    margin-right 20px
    position relative
    float right

    @media tb
      float none
      display block
      width auto
      padding 40px

    @media mb
      display block
      margin 0 -15px 40px
      background #eaeff4

    &:before
      position absolute
      content ""
      width 101px
      height 87px
      background url("../img/img--plane.png") no-repeat 0 0
      top -43px
      right 33px

      @media tb
        top 40px
        right 40px

    .aside__el
      display block
      margin-bottom 17px

      @media tb
        width 49%
        display inline-block
        vertical-align top

      @media xs
        width 100%
        display block

      &:last-child
        margin-bottom 0

      span
        display block
        margin-bottom 15px

        strong
          font-weight bold

      a
        display block
        font-weight lighter
        line-height 17px

        &:hover
          text-decoration underline

      &.tags
        @media tb
          display block
          width auto

        a
          color $cBlue_d


.blog__el
  display block
  margin-bottom 50px

  .img
      display inline-block
      vertical-align top
      width 235px
      margin-right 30px

      @media nb
        width 135px

      @media tb
        display block
        max-width 100%
        margin-bottom 40px
        text-align center
        width auto

      @media mb
        max-width 60%
        margin 0 auto 30px

      img
        display block
        max-width 100%
        border-radius 40px

        @media tb
          display block
          margin 0 auto

    .content
      display inline-block
      vertical-align top
      width 895px

      @media nb
        width 800px

      @media tb
        width auto
        display block

      span
        display block

      p
        margin-bottom 5px

      strong
        font-weight bold

      i
        display inline
        font-style italic

      ol,
      ul
        li
          display list-item

      time
        display block
        margin-bottom 5px
        color $cBlue_d
        font-weight bold

      .title
        display block
        color $cGray
        font-size 24px
        font-family $fUbuntu_m
        margin-bottom 33px

        &:hover
          text-decoration underline

      p
        display block
        line-height 17px
        margin-bottom 20px

      .article-params
        margin-top 57px
        padding-bottom 67px

        .data
          display inline-block
          vertical-align top
          margin-right 38px
          padding-top 30px

          @media tb
            margin-right 0
            text-align center

          @media mb
            display block
            margin-bottom 20px
            margin-right 0
            padding-top 0

          div
            display inline-block
            vertical-align top
            margin-right 33px

            @media mb
              margin-left 10px

            img
              display inline-block
              vertical-align top
              margin-right 8px
              width 23px
              height 21px

            span
              display inline-block
              vertical-align top
              color $cGray
              font-weight bold
              line-height 25px

        .btn
          display inline-block
          vertical-align top
          width 176px
          background url("../img/bg--btn-l.png") no-repeat 100% 100%
          background-size 100% 100%
          text-align center
          margin-right 60px

          @media mb
            display block
            margin 0 auto 10px


        .share
          display inline-block
          vertical-align top
          padding-top 22px

          @media mb
            text-align center
            display block

          ul
            @media mb
              text-align center

             li
               display inline-block
               vertical-align top
               margin-right 10px

      .comments
        ul
          margin-top -6px
          padding-bottom 28px

        li
          margin 0 -45px 30px
          padding 30px  45px
          text-align left
          background url("../img/bg--comment.png") no-repeat 0 0
          background-size 100% 100%

          @media tb
            background none

          time
            display inline-block
            vertical-align top
            margin-bottom 15px
            color $cBlue_d
            font-weight bold
            margin-right 38px

          span
            display inline-block
            vertical-align top
            color $cGray
            font-family $fUbuntu_m
            margin-bottom 15px

          p
            display block
            margin-bottom 0

  .add-comment
    padding-left 265px
    margin-top 54px

    @media nb
      padding-left 165px

    @media tb
      padding-left 0

    textarea.inp
      width 100%
      box-sizing border-box
      padding 20px
      height 195px
      border 1px solid $cBlue_m
      resize none