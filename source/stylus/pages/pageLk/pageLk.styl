.lk
  h3
    @media tb
      text-align left

    &.title-security
      @media tb
        padding 70px 0

  .main-form
    margin-left 30px
    margin-right 52px

    @media nb
      margin 0

    .flex-between
      @media mb
        display flex !important

      @media xs
        display block !important

    & > .flex-between
      @media mb
        display block !important

    h3
      padding-left 30px
      margin-bottom 18px

      @media tb
        padding-left 0

    .inp-s
      @media mb
        width 30%
        display inline-block

      @media xs
        display block
        width 100%

    .inp.inp-m
      @media mb
        width 48%
        display inline-block

      @media xs
        display block
        width 100%

    span.title
      padding-left 30px
      margin-bottom 40px

    .one-half
      width 505px

      @media nb
        width 465px

      @media tb
        width 100%

      &:last-child
        width 550px

        @media nb
          width 465px

        @media tb
          width 100%

        h3
          margin-bottom 28px

    .inp
      padding-left 20px

    .jq-selectbox
      .jq-selectbox__dropdown
        li:disabled
          display none

        li
          padding-left 20px

    .jq-selectbox__select
      padding-left 20px

    .lk--data
      .flex-between
        @media mb
          display flex !important

        @media xs
          display block !important

      .jq-selectbox
        width 30%

        @media xs
          width 100%

  &--name
    display block
    width 100%

    .jq-selectbox
      display block
      width 100%

  &--discount
    margin-bottom 38px

    .flex-between
      @media tb
        display block !important
        text-align center

    .inp.inp-m
      display inline-block
      vertical-align top
      width 64%

      @media tb
        display block
        width 100%
        text-align left

    &-added
      display inline-block
      vertical-align top
      width 140px
      text-align right

      @media tb
        display block
        width auto
        text-align center

      &--el
        display inline-block
        vertical-align top
        white-space nowrap

        a
          display block
          margin-bottom 16px
          text-align left

          @media tb
            display inline-block
            vertical-align top
            margin-top 22px

          span
            width 80px
            display inline-block
            vertical-align top
            font-weight bold

            @media tb
              width auto

        img
          @media tb
            display inline-block
            vertical-align top


    &-img
      display block
      width 105px
      margin-left 25px

  &--adress
    position relative

    .jq-selectbox
      width 49%

      @media tb
        width 100%

    &-img
      position absolute
      top -100px
      right 0

      @media tb
        width 120px
        top -72px

  .add-adress
    margin-top 5px
    margin-bottom 43px
    display inline-block
    vertical-align top

    @media tb
      display block
      margin 0 atuo 43px
      text-align center

    span
      display inline-block
      vertical-align top
      width 190px
      font-weight bold

      &:before
        content "+1"
        font-weight bold
        text-align center
        line-height 39px

  .my-order
    margin-top 28px
    display inline-block
    vertical-align top

    @media mb
      display block
      text-align center

    span
      display inline-block
      vertical-align top
      width 190px
      font-weight bold

      &:before
        content "..."
        font-weight bold
        text-align center
        line-height 33px
        padding-left 4px

  &--btn
    margin-top 30px

  &--password
    position relative

    &-img
      @media tb
        position absolute
        top -200px
        right 0

      @media mb
        width 120px
        top -150px

    .flex-between:last-child
      @media tb
        justify-content flex-end

