  background #fff

.page-wrap
  min-height 100%
  position relative
  min-width 320px
  overflow hidden
  
  &.decor
    background url("../img/bg--header.png") no-repeat 50% 0

form,
p,
ul, ol,
dl, dt, dd,
h1, h2, h3, h4, h5, h6
  margin 0 
  padding 0 
  font-weight normal 
  list-style none
  box-sizing border-box

